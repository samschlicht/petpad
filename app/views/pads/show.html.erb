
<div class="container">
  <div class="row">
    <div class="col-md-4">
        <%= image_tag("modern-dog-kennel-au.jpg", class: "img-thumbnail rounded-lg p-4 pad-image" ) %>
    </div>

    <div class="col-md-8">
      <h2 class="pad-title"> <%= @pad.title %> </h2>
      <p class="pad-address"> <%= @pad.address %> </p>
      <p><%= @pad.user.first_name + " " + @pad.user.last_name %></p>
      <p class="pad-email"> <%= @pad.user.email %> </p>
      <span style="color: #FA009C;">
        <i class="fa-solid fa-paw fa-bounce"></i>
        <i class="fa-solid fa-paw fa-bounce"></i>
        <i class="fa-solid fa-paw fa-bounce"></i>
      <div class="div">
       <%= link_to "Book Now", new_pad_booking_path(@pad), class: "btn" %>
      <%= link_to "Back to Pads", pads_path, class: "btn" %>
      </div>
    </div>
  </div>
</div>
