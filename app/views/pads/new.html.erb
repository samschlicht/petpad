<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1>List Your Pad</h1>
        <%= simple_form_for [@pad] do |f| %>
          <%= f.input :title, hint: "Give your place a descriptive name!" %>
          <%= f.input :description, input_html: { maxlength: 150 }, hint: "Tell us about your pad â€” 150 characters max." %>
          <%= f.input :capacity, hint: "How many pets can you accommodate?" %>
          <%= f.input :price_per_night, as: :currency %>
          <%= f.input :address,
                      input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
                      wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
          %>
          <%= f.input :photo, as: :file %>
          <%= f.input :welcome_species, label: 'What type of pets can you accommodate?', hint: 'E.g., dogs, snakes, cats, etc.' %>
          <%= f.input :availability, label: 'Is your pad available now?', as: :radio_buttons, hint: '(You can change this later on ğŸ˜‰)' %>
          <%= f.submit "Save Your Pad!", class: "btn mb-3" %>
        <% end %>
        <%= link_to "âŸ² Back to Pads", pads_path, class: "btn" %>
      </div>
    </div>
  </div>
</div>