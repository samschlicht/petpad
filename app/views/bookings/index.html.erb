<p>These are your bookings, <%= current_user.first_name %>!</p>
<p><%= "*" * 50 %></p>
<div= class="wrap">
  <div class="container">
    <% @bookings.each do |booking| %>
      <div class="row-1">
        <div class="col">
          <p class="filler">
            <div class="cards">
              <div class="card-category">
                  <p>Name: <%= booking.pad.title.capitalize %></p>
                  <p>Address: <%= booking.pad.address %></p>
                  <p>Comment: <%= booking.comment %></p>
                  <p>Status: <%= booking.status %> Pending...</p>
                  <img src="(https://source.unsplash.com/random/)"/>
                  <img src="/assets/images/modern-dog-kennel-au.jpg"/>
                  <i class="fa-solid fa-file-pen"></i>
                  <p><%= "*" * 50 %></p>
                <% end %>
                    </div>
                    </div>
        </div>
    </div>
  </div>
</div>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/)">
</div>

<i class="fa-thin fa-paw"></i>
